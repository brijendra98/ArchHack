<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.heinhtet.apps.archhacksapp.MainActivity"
    android:layout_width="match_parent">

        <TableLayout
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_width="match_parent"
            android:weightSum="1">


                <TextView
                    android:text="Patient Details"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

                <TextView
                    android:text="Name"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="textCapWords|textPersonName"
                    android:ems="10"
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="18sp" />

                <TextView
                    android:text="Birthday"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <DatePicker
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Height"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                        <EditText
                            android:ems="10"
                            android:id="@+id/height_ft"
                            android:inputType="number"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Ft."
                            android:layout_width="31dp"
                            android:textAppearance="@style/TextAppearance.AppCompat"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:ems="10"
                            android:id="@+id/height_in"
                            android:inputType="number"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="In."
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:text="Weight"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/weight"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

                <TextView
                    android:text="Blood Type"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/blood"
                    android:maxLength="2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="textCapCharacters" />

                <TextView
                    android:text="Organ Donor"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <Switch
                    android:ems="10"
                    android:id="@+id/donor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textOff="NO"
                    android:textOn="YES"
                    android:hint="YES/NO" />

                <TextView
                    android:text="Known Diseases"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <EditText
                    android:ems="10"
                    android:id="@+id/diseases"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="text|textCapWords|textMultiLine" />


                <TextView
                    android:text="Known Alergies"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="text|textCapWords|textMultiLine"
                    android:ems="10"
                    android:id="@+id/alergies"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />

                <TextView
                    android:text="Notes"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />

                <EditText
                    android:ems="10"
                    android:id="@+id/notes"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="text|textCapSentences|textMultiLine" />

                <Button
                    android:text="Submit"
                    android:id="@+id/submit"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />





        </TableLayout>

</ScrollView>
